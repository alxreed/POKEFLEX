<div class="container">
<div class="all">
<h1>EDIT YOUR POKEMON</h1>
<%= simple_form_for(@pokemon) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :race %>
    <%= f.input :level %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.submit "Edit this pokemon !", class: "btnrent" %>
  </div>

<% end %>
<div class="edit-pokemon-back-button">
    <div class="buttons">
      <%= link_to 'Back', pokemons_path %>
      </div>
</div>
</div>
</div>
