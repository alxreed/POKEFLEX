<%= simple_form_for(@pokemon) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :race %>
    <%#= f.input :race, collection: Race.all %>
    <%= f.input :level %>
    <%= f.input :hp %>
    <%= f.input :attack %>
    <%= f.input :defense %>
    <%= f.input :special_attack %>
    <%= f.input :special_defense %>
    <%= f.input :speed %>
    <%= f.input :price %>

  </div>

  <div class="form-actions">
    <%= f.submit "Add this pokemon !", class: "btnrent" %>
  </div>

<% end %>
